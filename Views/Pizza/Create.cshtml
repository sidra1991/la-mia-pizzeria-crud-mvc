@model FormPizzaCategory;

@{
    Layout = "_Layout";
}

<form asp-controller="Pizza" asp-action="create" method="post">

        <div class="mb-3">
            @foreach (var item in Model.categories)
            {
               <input type="radio" id="" name="category" value="@item.Id"> <span> @item.Name </span>
            }

        </div>

        <div class="mb-3">
            <label for="Immage" class="form-label">Immagine</label>
            <input asp-for="Pizza.ImageAddress" class="form-control" aria-describedby="emailHelp" />
            <span asp-validation-for="Pizza.ImageAddress" class="text-danger" ></span>
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Nome</label>
            <input asp-for="Pizza.Name" class="form-control" />
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <label for="Price" class="form-label">prezzo</label>
            <input type="number" asp-for="Pizza.Price" />
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Descrizione</label>
            <textarea asp-for="Pizza.Description" rows="10" ></textarea>
            <span asp-validation-for="Pizza.Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

</form>